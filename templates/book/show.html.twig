{% extends 'base.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<h1>Book</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ book.id }}</td>
			</tr>
			<tr>
				<th>ISBN</th>
				<td>{{ book.ISBN }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ book.title }}</td>
			</tr>
			<tr>
				<th>Author</th>
				<td>{{ book.author.name }}</td>
			</tr>
			<tr>
				<th>Summary</th>
				<td>{{ book.summary }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ book.description }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ book.price }}</td>
			</tr>
			<tr>
				<th>Editor</th>
				<td>{{ book.editor.name }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_book_index') }}">back to list</a>

	<a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>

	{{ include('book/_delete_form.html.twig') }}
{% endblock %}
