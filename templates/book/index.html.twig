{% extends 'base.html.twig' %}

{% block title %}Book index
{% endblock %}

{% block body %}
	<h1>Book index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>ISBN</th>
				<th>Title</th>
				<th>Author</th>
				<th>Editor</th>
				<th>Summary</th>
				<th>Description</th>
				<th>Price</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for book in books %}
				<tr>
					<td>{{ book.id }}</td>
					<td>{{ book.ISBN }}</td>
					<td>{{ book.title }}</td>
					<td>{{ book.author.name }}</td>
					<td>{{ book.editor.name }}</td>
					<td>{{ book.summary }}</td>
					<td>{{ book.description }}</td>
					<td>{{ book.price }}</td>
					<td>
						<a href="{{ path('app_book_show', {'id': book.id}) }}">show</a>
						<a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_book_new') }}">Create new</a>
{% endblock %}
